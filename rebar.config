{erl_opts, [
    debug_info,
    warn_unused_vars,
    warnings_as_errors,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    warn_untyped_record
    % warn_missing_spec,
    % warn_missing_doc
]}.

{deps, []}.

{xref_extra_paths, []}.
{xref_ignores, [ddskerl_pb]}.
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [no_return, error_handling, unknown]}
]}.

{profiles, [
    {test, [
        {deps, [{proper, "1.4.0"}]},
        {erl_opts, [nowarn_export_all, nowarn_missing_spec, nowarn_missing_doc]},
        {covertool, [{coverdata_files, ["eunit.coverdata", "ct.coverdata"]}]},
        {cover_opts, [verbose, {min_coverage, 94}]},
        {cover_enabled, true},
        {cover_export_enabled, true},
        {cover_excl_mods, [ddskerl_pb, ddskerl_protobuf]}
    ]},
    {gpb, [
        {plugins, [{rebar3_gpb_plugin, "~> 2.23"}]},
        {provider_hooks, [
            {pre, [{compile, {protobuf, compile}}]},
            {post, [{clean, {protobuf, clean}}]}
        ]},
        {gpb_opts, [
            {i, "src/proto"},
            {o_erl, "src/proto"},
            {o_hrl, "src/proto"},
            {module_name_suffix, "_pb"},
            {erlc_compile_options, "nowarn_missing_spec, nowarn_missing_doc"},
            strings_as_binaries,
            mapfields_as_maps,
            defs_as_maps,
            type_specs
        ]}
    ]}
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0.8"},
    {rebar3_lint, "~> 3.2.6"},
    {rebar3_ex_doc, "~> 0.2.25"},
    {erlfmt, "~> 1.6.0"},
    {covertool, "~> 2.0.7"}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc, [
    {source_url, <<"https://github.com/NelsonVides/ddskerl">>},
    {main, <<"readme">>},
    {extras, [
        {'README.md', #{title => <<"Overview">>}},
        {'LICENSE', #{title => <<"License">>}}
    ]}
]}.

{erlfmt, [
    write,
    {files, [
        "include/**/*.{hrl,erl,app.src}",
        "src/**/*.{hrl,erl,app.src}",
        "test/**/*.{hrl,erl,app.src}",
        "rebar.config"
    ]},
    {exclude_files, [
        "src/proto/ddskerl_pb.erl",
        "src/proto/ddskerl_pb.hrl"
    ]}
]}.

{elvis, [
    #{
        dirs => ["src"],
        filter => "*.erl",
        ruleset => erl_files
    },
    #{
        dirs => ["test/"],
        filter => "*.erl",
        rules => [
            {elvis_style, no_block_expressions, disable},
            {elvis_style, invalid_dynamic_call, disable},
            {elvis_style, no_debug_call, disable}
        ],
        ruleset => erl_files
    },
    #{
        dirs => ["."],
        filter => "rebar.config",
        ruleset => rebar_config
    }
]}.
